<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="GeneralLeaveEmailTemplate">
        <section>
            <actions>
                <set field="title" value="${title}"/>
                <set field="footerMsg" value="${footerMsg}"/>  
                <set field="mailDescription" value="${mailDescription}"/>  
            </actions>
            <widgets>
                <platform-specific>
                    <html>
                        <html-template location="component://humanres/webapp/humanres/humanres/email/commonEmailLeaveTemplate.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
</screens>